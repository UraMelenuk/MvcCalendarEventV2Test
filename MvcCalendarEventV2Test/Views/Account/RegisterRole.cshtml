@model MvcCalendarEventV2Test.Models.RegisterViewModel
@{
    ViewBag.Title = "Register Role";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("RegisterRole", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new account.</h4>
    <hr />
    @Html.ValidationSummary("",new { @class = "text-danger" })
    <div class="form-group">
        @Html.Label("Select Role", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownList("UserName")
        </div>
    </div>

    <!-- Select the Role Type for the User -->
    <div class="form-group">
        @Html.Label("Select User", new { @class="col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownList("Name")
        </div>
    </div>
    <!-- Ends Here -->
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-success" value="Register" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="button" class="btn btn-primary" value="Back to List" onclick="location.href='@Url.Action("Index", "Admin")'" />
        </div>
    </div>


}

@section Scripts{
@Scripts.Render("~/bundles/jqueryval")    
}
