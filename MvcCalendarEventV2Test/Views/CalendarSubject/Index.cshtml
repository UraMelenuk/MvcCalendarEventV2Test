@model IEnumerable<MvcCalendarEventV2Test.Models.CalendarSubject>
@{
    ViewBag.Title = "Subjects";
}

<h2>Subjects</h2>

<p>
    <input type="button" class="btn btn-success" value="Create new" onclick="location.href='@Url.Action("Create", "CalendarSubject")'" />
</p>
<table class="table table-bordered table-hover" style="text-align:center;">
    <thead style="background-color:grey; color:white;">
        <tr>
            <th style="text-align:center;">
                @Html.DisplayNameFor(model => model.SubjectName)
            </th>
            <th style="text-align:center;">
                @Html.DisplayNameFor(model => model.SubjectCountLesson)
            </th>
            <th style="text-align:center;">
                Button Edit/Delete
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SubjectName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SubjectCountLesson)
                </td>
                <td>
                    <input style="margin-right:5px;" type="button" class="btn btn-warning" value="Edit" onclick="location.href='@Url.Action("Edit", "CalendarSubject", new { id = item.SubjectId })'" />
                    <input type="button" class="btn btn-danger" value="Delete" onclick="location.href='@Url.Action("Delete", "CalendarSubject", new { id = item.SubjectId })'" />
                </td>
            </tr>
        }
    </tbody>

</table>
